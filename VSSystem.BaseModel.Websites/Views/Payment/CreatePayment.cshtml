@{
    Layout = "~/Views/Shared/_CRMSystemLayoutPage.cshtml";
}

@model AKCPA.Data.Models.Payment


@{
    ViewBag.Title = "Create";
    string businessName = ViewBag.Business_Name;
    string customeraccount = ViewBag.Customer_Account;
}

<h2>Create Payment</h2>


@using (Html.BeginForm("Create", "Payment",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Payment</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
           
            @Html.Label("Business Name:","Business Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Business Name", businessName, new { @readonly = "readonly" })
                
            </div>
        </div>
        
        <div class="form-group">

            @Html.Label("ID Code:", "ID Code", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("ID Code", customeraccount, new { @readonly = "readonly" })

            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Payment_TypeID, "Payment_TypeID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Payment_TypeID", String.Empty)
                @Html.ValidationMessageFor(model => model.Payment_TypeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PaymentDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PaymentDate)
                @Html.ValidationMessageFor(model => model.PaymentDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Amount)
                @Html.ValidationMessageFor(model => model.Amount)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note)
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.receivedBy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.receivedBy)
                @Html.ValidationMessageFor(model => model.receivedBy)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="CreatePayment" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "../Invoice/Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
