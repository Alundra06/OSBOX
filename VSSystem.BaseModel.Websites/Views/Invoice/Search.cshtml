@{
    Layout = "~/Views/Shared/_CRMSystemLayoutPage.cshtml";
}
@model IEnumerable<AKCPA.Data.Models.Invoice>

@{
    ViewBag.Title = "Search Invoice";
}

<p>
    @Html.ActionLink("Show all", "Index")
</p>

<h2>Index</h2>

<p>
    @using (Html.BeginForm("Search", "Invoice", FormMethod.Get, new { enctype = "multipart/form-data" }))
    {
        @Html.TextBox("search") <input type="submit" value="Search by Business Name" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due_Amount)
        </th>

        <!--
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        -->

        <th>
            @Html.DisplayNameFor(model => model.Paid_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment_Term)
        </th>

        <!--
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
         -->

        <th>
            @Html.DisplayNameFor(model => model.Customer.Business_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.RadioButtonFor(modelItem => item.Invoice_Number, item.Invoice_Name)
                @Html.DisplayFor(modelItem => item.Invoice_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due_Amount)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
             -->
            <td>
                @Html.DisplayFor(modelItem => item.Paid_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment_Term)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
             -->
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Business_Name)
            </td>
            <td>
                @Html.ActionLink("Payment", "Payment", new { Invoice_ID = item.Invoice_ID, Business_Name = item.Customer.Business_Name }) |
                @Html.ActionLink("Create Invoice", "CreateNew", new {CustomerId = item.Invoice_ID, Business_Name = item.Customer.Business_Name }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Invoice_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Invoice_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Invoice_ID })
            </td>
        </tr>
    }

</table>


