                    @Html.TextBoxFor(model => model.Priority, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Priority)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Status)
                </div>
            </div>*@

            <div class="form-group">
                @Html.LabelFor(model => model.AssignementDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.JQueryUI().DatepickerFor(model => model.AssignementDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AssignementDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreationDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.JQueryUI().DatepickerFor(model => model.CreationDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CreationDate)

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CompletionDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.JQueryUI().DatepickerFor(model => model.CompletionDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CompletionDate)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Employee Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Employee_ID", EmployeeNames, new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Customer Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CustomerID", CustomerNames, new { @class = "form-control" })

                </div>
            </div>


            <div class="form-group">
                @Html.Label("Upload file", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="fileUpload" name="fileUpload" size="23" />

                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" /> | 
                    <a class="popup-modal-dismiss" href="#">Dismiss</a>
                </div>
            </div>
            </fieldset>
</div>
}


