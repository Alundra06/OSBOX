@*Task Edit*@

@*@{
    Layout = "~/Views/Shared/_SystemIndexLayoutPage.cshtml";
}*@
<!-- Magnific Popup core CSS file -->

<link href="~/Content/magnific-popup.css" rel="stylesheet" />



@model OSBOX.Data.Models.TaskModel

@{
    ViewBag.Title = "Edit";
    SelectListItem[] CustomerNames = ViewBag.Customers;
    SelectListItem[] EmployeeNames = ViewBag.Employees;
}

@*<h2>Edit</h2>*@






@using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal white-popup-block ">
        <fieldset>
            <legend>Edit</legend>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.TasksID)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.JQueryUI().DatepickerFor(model => model.StartDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StartDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DueDate, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.JQueryUI().DatepickerFor(model => model.DueDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DueDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Complete, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Complete, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Complete)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control wide", style = "height:250px;" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            @*<div class="form-group">
                @Html.LabelFor(model => model.Priority, new { @class = "control-label col-md-2" })
