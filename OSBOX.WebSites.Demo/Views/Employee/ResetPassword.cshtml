@using (Html.BeginForm("ResetPassword", "Employee", FormMethod.Post))
{

    @*<div class="modal-body">*@


    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <div class="form-horizontal">

        @*the value to hold the customer ID*@
        @Html.HiddenFor(m => m.EmployeeID, new { Value = @ViewBag.EmployeeID })






        @*<legend>

                @Html.DisplayName("ID Code") : @ViewBag.username

            </legend>*@
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>


        <div>@Html.ActionLink("Back", "index", "Employee", new { @class = "btn btn-warning" }) |  <button class="btn btn-info" type="submit"> Reset password</button></div>
    </div>
}
