@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<OSBOX.Data.Models.Invoice>

@{
    ViewBag.Title = "Report Invoice";
}
@{
    Layout = "~/Views/Shared/_SystemIndexLayoutPage.cshtml";
}
<p>
    <!--@Html.ActionLink("Show all", "Index1")-->
</p>

<p>Report Invoices - Due Amount>0</p>

<p>
    @using (Html.BeginForm("InvoiceReport", "Invoice", FormMethod.Get, new { enctype = "multipart/form-data" }))
    {
        @Html.TextBox("Filter") <input type="submit" value="Search by Business Name" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice_Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Due_Amount)
        </th>

        <!--
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        -->

        <th>
            @Html.DisplayNameFor(model => model.Paid_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment_Term)
        </th>

        <!--
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
         -->

        <th>
            @Html.DisplayNameFor(model => model.Customer.Business_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.RadioButtonFor(modelItem => item.Invoice_Number, item.Invoice_Name)
                @Html.DisplayFor(modelItem => item.Invoice_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due_Amount)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
             -->
            <td>
                @Html.DisplayFor(modelItem => item.Paid_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment_Term)
            </td>
            <!--
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
             -->
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Business_Name)
            </td>
            <td>
                @Html.ActionLink("Payment", "Index1", "Payment" ) 
            </td>
        </tr>
    }

</table>



